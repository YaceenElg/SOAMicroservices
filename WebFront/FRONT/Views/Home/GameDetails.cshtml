@model FRONT.Models.Game
@{
    ViewData["Title"] = "Game Details";
}

<div class="container mt-4">
    <div class="mb-4">
        <a asp-action="Games" asp-route-categoryId="@Model.CategoryId" class="btn btn-secondary">
            Back to Games
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="card-title text-primary mb-3">@Model.Title</h2>
                    <p class="text-muted mb-3">
                        <span class="badge bg-secondary">@Model.Category?.Name</span>
                    </p>
                    <hr />
                    <div class="mb-4">
                        <h5>Description</h5>
                        <p class="lead">@Model.Description</p>
                    </div>
                    <div class="mt-4">
                        <h4 class="text-success">Price: $@Model.Price.ToString("F2")</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 bg-light">
                <div class="card-body text-center p-4">
                    <h4 class="card-title mb-4">Ready to Play?</h4>
                    <p class="text-muted mb-4">Click the button below to start playing this game!</p>
                    <a asp-action="LaunchGame" asp-route-id="@Model.Id" asp-route-gameUrl="@Model.GameUrl" 
                       class="btn btn-success btn-lg w-100 py-3">
                        Play Game
                    </a>
                    <div class="mt-3">
                        <small class="text-muted">
                            The game will open in a new interface
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
