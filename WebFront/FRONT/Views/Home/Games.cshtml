@model List<FRONT.Models.Game>
@{
    ViewData["Title"] = "Games";
    var categoryId = ViewBag.CategoryId as int?;
}

<div class="container mt-4">
    <div class="mb-4">
        <a asp-action="Categories" class="btn btn-secondary">‚Üê Back to Categories</a>
    </div>

    <h2 class="mb-4">Available Games</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var game in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@game.Title</h5>
                            <p class="card-text flex-grow-1">@game.Description</p>
                            <div class="mt-auto">
                                <p class="text-success fw-bold fs-5 mb-3">$@game.Price.ToString("F2")</p>
                                <a asp-action="GameDetails" asp-route-id="@game.Id" class="btn btn-primary w-100">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h5>No games available</h5>
            <p>There are no games available in this category at the moment.</p>
        </div>
    }
</div>
