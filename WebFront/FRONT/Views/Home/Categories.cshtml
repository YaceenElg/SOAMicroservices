@model List<FRONT.Models.Category>
@{
    ViewData["Title"] = "Categories";
    var username = Context.Session.GetString("Username");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Game Categories</h2>
        <div>
            <span class="text-muted">Welcome, @username</span>
            <a asp-action="Logout" class="btn btn-outline-danger ms-2">Logout</a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@category.Name</h5>
                            <p class="card-text">@category.Description</p>
                            <a asp-action="Games" asp-route-categoryId="@category.Id" class="btn btn-primary">View Games</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">No categories available.</div>
    }
</div>
